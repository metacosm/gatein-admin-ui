<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_2 http://www.gatein.org/xml/ns/gatein_objects_1_2"
          xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_2">

   <page>
      <name>configuration</name>
      <title>Site Configuration</title>
      <access-permissions>Everyone</access-permissions>
      <edit-permission>*:/platform/administrators</edit-permission>
      <portlet-application>
         <portlet>
            <application-ref>gatein-admin-ui</application-ref>
            <portlet-ref>AdminConfigurationPortlet</portlet-ref>
         </portlet>
         <title>Site Configuration</title>
         <access-permissions>Everyone</access-permissions>
         <show-info-bar>false</show-info-bar>
         <show-application-state>false</show-application-state>
         <show-application-mode>false</show-application-mode>
      </portlet-application>
   </page>
   <page>
      <name>redirects</name>
      <title>Site Redirects Configuration</title>
      <access-permissions>Everyone</access-permissions>
      <edit-permission>*:/platform/administrators</edit-permission>
      <portlet-application>
         <portlet>
            <application-ref>gatein-admin-ui</application-ref>
            <portlet-ref>AdminRedirectsPortlet</portlet-ref>
         </portlet>
         <title>Site Redirects</title>
         <access-permissions>Everyone</access-permissions>
         <show-info-bar>false</show-info-bar>
         <show-application-state>false</show-application-state>
         <show-application-mode>false</show-application-mode>
      </portlet-application>
   </page>
   <page>
      <name>layout</name>
      <title>Site Layout</title>
      <access-permissions>Everyone</access-permissions>
      <edit-permission>*:/platform/administrators</edit-permission>
      <portlet-application>
         <portlet>
            <application-ref>gatein-admin-ui</application-ref>
            <portlet-ref>AdminLayoutPortlet</portlet-ref>
         </portlet>
         <title>Site Layout</title>
         <access-permissions>Everyone</access-permissions>
         <show-info-bar>false</show-info-bar>
         <show-application-state>false</show-application-state>
         <show-application-mode>false</show-application-mode>
      </portlet-application>
   </page>
   <page>
      <name>navigation</name>
      <title>Site Navigation and Pages</title>
      <access-permissions>Everyone</access-permissions>
      <edit-permission>*:/platform/administrators</edit-permission>
      <portlet-application>
         <portlet>
            <application-ref>gatein-admin-ui</application-ref>
            <portlet-ref>AdminNavigationPortlet</portlet-ref>
         </portlet>
         <title>Site Navigation and Pages</title>
         <access-permissions>Everyone</access-permissions>
         <show-info-bar>false</show-info-bar>
         <show-application-state>false</show-application-state>
         <show-application-mode>false</show-application-mode>
      </portlet-application>
   </page>

</page-set>
