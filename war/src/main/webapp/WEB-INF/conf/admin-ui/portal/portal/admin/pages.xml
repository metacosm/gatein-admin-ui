<?xml version="1.0" encoding="ISO-8859-1"?>
<page-set xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.gatein.org/xml/ns/gatein_objects_1_2 http://www.gatein.org/xml/ns/gatein_objects_1_2"
	xmlns="http://www.gatein.org/xml/ns/gatein_objects_1_2">

	<page>
		<name>homepage</name>
		<title>Home Page</title>
		<access-permissions>Everyone</access-permissions>
		<edit-permission>*:/platform/administrators</edit-permission>
		<container
			template="system:/groovy/portal/webui/container/UITableColumnContainer.gtmpl">
			<access-permissions>Everyone</access-permissions>
			<container template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
				<access-permissions>Everyone</access-permissions>
				<portlet-application>
					<portlet>
						<application-ref>gatein-admin-ui</application-ref>
						<portlet-ref>AdminMenuPortlet</portlet-ref>
					</portlet>
					<title>Admin Menu portlet</title>
					<access-permissions>Everyone</access-permissions>
					<show-info-bar>false</show-info-bar>
					<show-application-state>false</show-application-state>
					<show-application-mode>false</show-application-mode>
				</portlet-application>
			</container>
			<container template="system:/groovy/portal/webui/container/UIContainer.gtmpl">
				<access-permissions>Everyone</access-permissions>
				<portlet-application>
					<portlet>
						<application-ref>gatein-admin-ui</application-ref>
						<portlet-ref>AdminOption1Portlet</portlet-ref>
					</portlet>
					<title>Admin Option1 portlet</title>
					<access-permissions>Everyone</access-permissions>
					<show-info-bar>false</show-info-bar>
					<show-application-state>false</show-application-state>
					<show-application-mode>false</show-application-mode>
				</portlet-application>
				<portlet-application>
					<portlet>
						<application-ref>gatein-admin-ui</application-ref>
						<portlet-ref>AdminOption2Portlet</portlet-ref>
					</portlet>
					<title>Admin Option2 portlet</title>
					<access-permissions>Everyone</access-permissions>
					<show-info-bar>false</show-info-bar>
					<show-application-state>false</show-application-state>
					<show-application-mode>false</show-application-mode>
				</portlet-application>
			</container>
		</container>
	</page>

</page-set>
